<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brais.channelband">

    <!-- Le doy permisos para acceder a internet y descargar datos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- *********************************************************************************** -->
        <!-- Hacemos esto para que nos permita pasar con los intents entre las distintas activities -->
        <activity android:name=".News">
            <intent-filter>
                <action android:name="com.example.brais.channelband.News" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".History">
            <intent-filter>
                <action android:name="com.example.brais.channelband.History" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Components">
            <intent-filter>
                <action android:name="com.example.brais.channelband.Components" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Shows">
            <intent-filter>
                <action android:name="com.example.brais.channelband.Shows" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".StaticFragments.Main_Fragments">
            <intent-filter>
                <action android:name="com.example.brais.channelband.StaticFragments.Main_Fragments" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Gallery">
            <intent-filter>
                <action android:name="com.example.brais.channelband.Gallery" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Multimedia">
            <intent-filter>
                <action android:name="com.example.brais.channelband.Multimedia" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Database.Administrator">
            <intent-filter>
                <action android:name="com.example.brais.channelband.Database.Administrator" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- *********************************************************************************** -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>